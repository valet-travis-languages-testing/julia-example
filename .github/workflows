name: valet-travis-languages-testing/julia-example
on:
  workflow_dispatch:
jobs:
  test:
    runs-on: ubuntu-latest
    steps:
    - name: checkout
      uses: actions/checkout@v2
    - uses: julia-actions/setup-julia@v1
      with:
        version: "${{ matrix.julia }}"
    - run: Pkg.build('$name')
    - run: using Pkg; Pkg.build(); Pkg.test(coverage=true)
    strategy:
      matrix:
        julia:
        - nightly
        - 1.0.6
        - 1.5.2
